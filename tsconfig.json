{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2018",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "resolveJsonModule": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ],
  "plugins": [
    {
      "name": "tslint-language-service"
    }
  ]
}
